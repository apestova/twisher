<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
            <servlet-name>runningServlet</servlet-name>
            <servlet-class>RunningServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>runningServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>runningServletStatus</servlet-name>
        <servlet-class>RunningServletStatus</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>runningServletStatus</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>runningServletName</servlet-name>
        <servlet-class>RunningServletName</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>runningServletName</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>runningServletPost</servlet-name>
        <servlet-class>RunningServletPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>runningServletPost</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>runningServletPage</servlet-name>
        <servlet-class>RunningServletPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>runningServletPage</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>servletForPosts</servlet-name>
        <servlet-class>posts.ServletForPosts</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servletForPosts</servlet-name>
        <url-pattern>/tweets</url-pattern>
    </servlet-mapping>
</web-app>
